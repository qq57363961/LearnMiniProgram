<!--pages/scrollview/scrollview.wxml-->
<!-- 官方文档  组件---视图容器---scroll-view  -->
<!-- 页面滚动不需要使用scroll-view,一般用于局部滚动 -->

<!-- 1.水平滚动 -->
<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" class="item1">{{item}}</view>
</scroll-view>

<!-- 2.垂直滚动 -->
<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>

<!-- 3.其它补充 -->
<scroll-view class="container2" scroll-y bindscroll="handleScroll" bindscrolltoupper="handleToUpper" bindscrolltolower="handleToLower">
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>

<!-- bindscrolltoupper 滚动到左上触发  bindscrolltolower 滚动到右下触发 -->