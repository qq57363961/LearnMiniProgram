<!--pages/text/text.wxml-->
<!-- text组件的使用 -->

<!-- 1.基本使用 -->
<text>Hello world\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable: true  默认false,即text中的文本长按是不能选中的-->
<text selectable="{{true}}">Hello pencheng\n</text>
<text selectable>Hello pencheng\n</text>

<!-- 3.space:决定文本空格的大小 -->
<!-- ensp 半个中文字符大小  emsp 一个中文字符大小 -->
<text space='nbsp'>Hello World\n</text>
<text space='ensp'>Hello World\n</text>
<text space='emsp'>Hello World\n</text>

<!-- 4.decode 是否解码文本 -->
<text decode="{{true}}">5 &gt; 3\n</text>
<text decode>5 &gt; 3\n</text>
